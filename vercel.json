{
  "framework": "nextjs",
  "buildCommand": "NEXT_PUBLIC_BASE_URL=$VERCEL_URL NODE_ENV=production pnpm run build",
  "installCommand": "pnpm install",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "postcss": true,
        "minify": true
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 